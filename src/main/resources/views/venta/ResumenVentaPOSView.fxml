<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/8.0.221"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.palina.venta_ui.controllers.ResumenVentaPOSController"
      spacing="10"
      styleClass="root"
      stylesheets="@../../styles/principal.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Resumen de Venta" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Total productos:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="totalProductosLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Total importe:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="totalImporteLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Tipo pago:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="tipoPagoLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Tipo venta:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="tipoVentaLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label fx:id="clienteLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <!-- NUEVO: Pago recibido y cambio -->
        <Label text="Pago recibido:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="pagoRecibidoField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label text="Cambio a regresar:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <Label fx:id="cambioLabel" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancelar"/>
        <Button fx:id="confirmButton" text="Confirmar Venta"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>


</VBox>
